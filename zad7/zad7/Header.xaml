<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zad7.Header">
    <Grid ColumnDefinitions="auto, auto, *" BackgroundColor="Purple">
        <Label TextColor="White" Text="Currently logged user: "></Label>
        <Label Grid.Column="1" TextColor="White" Text="{Binding LoggedUser}"></Label>
    </Grid>
</ContentView>