@using zad6.Services
@inject IAuthService authService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">zad6</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        @if (isLoggedIn)
        {
            <div class="nav-item px-3">
                <p class="text-center text-white">Logged User: @Username</p>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if (isLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="addbook">
                    <span class="oi oi-plus" aria-hidden="true"></span> Add Book
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="bookList">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Book List
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="changePassword">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Change Password
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <button class="btn-primary" onclick="@Logout">Logout</button>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Login">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Login
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Register">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Register
                </NavLink>
            </div>
        }
    </nav>
    <div class="flex-row mx-auto justify-content-center">
        
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    
    public string? Username => authService.Username;
    public bool isLoggedIn => authService.isLoggedIn;

    protected override void OnInitialized()
    {
        authService.AuthStateChanged += OnAuthChanged;
        base.OnInitialized();
    }

    private void OnAuthChanged()
    {
        StateHasChanged();
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    private async Task Logout()
    {
        await authService.Logout();
    }

}