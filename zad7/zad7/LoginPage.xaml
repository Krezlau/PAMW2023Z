<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zad7.LoginPage">
    <ContentPage.Content>
   <ScrollView>
         <VerticalStackLayout
             Padding="30,0"
             Spacing="25">
                <Label
                    Text="Login"
                    FontSize="Title"
                    HorizontalOptions="Center" />
                <Entry
                    Text="{Binding Email}"
                    Placeholder="Email" />
                <Entry
                    Text="{Binding Password}"
                    Placeholder="Password"
                    IsPassword="True"/>
                <Label Text="{Binding ErrorMessage}" TextColor="Red"></Label>
                <Button Command="{Binding SubmitCommand}" Text="Login"></Button>
                <Label Text="Don't have an account?"></Label>
                <Button Command="{Binding RegisterCommand}" Text="Register"></Button>
                
         </VerticalStackLayout>
     </ScrollView>       
    </ContentPage.Content>
</ContentPage>